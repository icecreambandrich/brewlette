generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // e.g. Vercel pooled: POSTGRES_PRISMA_URL
  directUrl = env("DIRECT_URL")     // e.g. Vercel non-pooled: POSTGRES_URL_NON_POOLING
}

model CoffeeShop {
  id          Int     @id @default(autoincrement())
  name        String
  address     String
  postcode    String?
  reviewCount Int?
  rating      Float
  lat         Float?
  lng         Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("coffee_shops")
  @@index([lat, lng])
  @@index([postcode])
}
